    "@angular/platform-browser-dynamic": "^18.2.0",
    "@copilotkitnext/angular": "workspace:*",
    "@copilotkitnext/shared": "workspace:*",
    "uuid": "^11.1.0",
    "@ag-ui/client": "0.0.40-alpha.7",
