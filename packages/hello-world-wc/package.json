    "clean": "rimraf dist src/tw.css"
  },
  "dependencies": {
    "lit": "^3.3.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.4.31",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  }
}