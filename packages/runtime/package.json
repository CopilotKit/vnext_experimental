{
  "name": "@copilotkit/runtime",
  "version": "0.0.0",
  "private": true,
  "description": "Server-side runtime package for CopilotKit2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@copilotkit/eslint-config": "workspace:*",
    "@copilotkit/typescript-config": "workspace:*",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.3",
    "eslint": "^9.30.0",
    "jest": "^29.7.0",
    "openai": "^5.9.0",
    "ts-jest": "^29.1.2",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@ag-ui/client": "^0.0.30",
    "@ag-ui/core": "^0.0.30",
    "@copilotkit/shared": "workspace:*",
    "@whatwg-node/server": "^0.10.10"
  },
  "peerDependencies": {
    "openai": "^5.9.0"
  },
  "engines": {
    "node": ">=18"
  }
}
