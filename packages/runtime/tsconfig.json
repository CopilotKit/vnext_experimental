{
  "extends": "@copilotkitnext/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@copilotkitnext/shared": [
        "../shared/dist/index.d.ts",
        "../shared/src/index.ts"
      ]
    },
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "src/**/__tests__/**", "src/**/*.test.ts"]
}
