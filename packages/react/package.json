{
  "name": "@copilotkit/react",
  "version": "0.0.0",
  "private": true,
  "description": "React components for CopilotKit2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "dev:css": "npx @tailwindcss/cli -i ./src/styles/globals.css -o ./dist/styles.css --watch",
    "build:css": "npx @tailwindcss/cli -i ./src/styles/globals.css -o ./dist/styles.css -m",
    "dev": "concurrently \"npm:dev:css\" \"tsc --watch --preserveWatchOutput\"",
    "build": "npm run build:css && tsc",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@copilotkit/eslint-config": "workspace:*",
    "@copilotkit/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/node": "^22.15.3",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/react-scroll-to-bottom": "^4.2.5",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.30.0",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4.0.8",
    "typescript": "5.8.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@ag-ui/client": "0.0.35",
    "@ag-ui/core": "0.0.35",
    "@copilotkit/core": "workspace:*",
    "@copilotkit/shared": "workspace:*",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "katex": "^0.16.22",
    "lucide-react": "^0.525.0",
    "react-markdown": "^10.1.0",
    "react-scroll-to-bottom": "^4.2.0",
    "rehype-katex": "^7.0.1",
    "rehype-pretty-code": "^0.14.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "shiki": "^3.8.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.5",
    "zod": "^3.25.75"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "engines": {
    "node": ">=18"
  }
}
